<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/message_available"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/titleDetailDialog"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/title_dialog_drawable"
        android:gravity="center"
        android:textSize="25dp"
        android:singleLine="false"
        android:padding="25px"
        android:textColor="#ff34bbff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/detailDialogAddressInfo"
        android:id="@+id/station_address"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/titleDetailDialog"
        android:layout_alignRight="@+id/close_dialog"
        android:layout_alignEnd="@+id/close_dialog"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/detailDialogBikeInfo"
        android:id="@+id/bikes"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/titleDetailDialog"
        android:layout_alignRight="@+id/close_dialog"
        android:layout_alignEnd="@+id/close_dialog"
        android:gravity="center" />

    <TextView
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/detailDialogAttachInfo"
        android:id="@+id/attachs"
        android:layout_below="@+id/bikes"
        android:layout_alignLeft="@+id/bikes"
        android:layout_alignStart="@+id/bikes"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fermer"
        android:id="@+id/close_dialog"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px" />

</LinearLayout>